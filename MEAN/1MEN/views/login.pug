extends layout
block content
    h1 #{title}
    form(method="POST", action="/users/login")
        .form-group
            label User name:
            input.form-control(type="text" name="username")
        .form-group
            label Password:
            input.form-control(type="password" name="pass1")

        input.btn.btn-primary(type="submit", value="Login")