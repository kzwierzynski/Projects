extends layout
block content
    h1 #{article.title}
    h4 Written by #{author}
    p #{article.body}
    br
    if user
        if user._id == article.author
            a.btn.btn-info(href="/articles/edit/" + article._id) Edit
            a.btn.btn-danger.del-art(href="#"+article._id data-id=article._id) Delete